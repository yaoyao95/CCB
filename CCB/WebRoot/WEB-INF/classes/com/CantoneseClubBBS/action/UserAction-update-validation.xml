<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE validators PUBLIC
  		"-//Apache Struts//XWork Validator 1.0.3//EN"
  		"http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <!-- 标题校验 -->
    <field name="user_.name">
        <!-- 字段校验器，字符串必须 -->
         <field-validator type="stringlength">
            <param name="maxLength">12</param>
            <param name="minLength">1</param>
            <message>用户名长度必须在${minLength}到${maxLength}个半角字符之间</message>
        </field-validator>
    </field>
    <field name="user_.password">
        <field-validator type="stringlength">
            <param name="maxLength">20</param>
            <param name="minLength">1</param>
            <message>密码长度必须在${minLength}到${maxLength}字符之间</message>
        </field-validator>
    </field>
    <field name="user_.passWord_answer1">
        <field-validator type="stringlength">
            <param name="maxLength">30</param>
            <param name="minLength">1</param>
            <message>密保答案1长度必须在${minLength}到${maxLength}字符之间</message>
        </field-validator>
    </field>
    <field name="user_.password_issue1">
        <field-validator type="stringlength">
            <param name="maxLength">30</param>
            <param name="minLength">1</param>
            <message>密保问题1长度必须在${minLength}到${maxLength}字符之间</message>
        </field-validator>
    </field>
</validators>